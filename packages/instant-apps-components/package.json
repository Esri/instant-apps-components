{
  "homepage": "https://esri.github.io/instant-apps-components",
  "name": "@esri/instant-apps-components",
  "version": "1.0.0-beta.100",
  "description": "Reusable ArcGIS Instant Apps web components.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/instant-apps-components/instant-apps-components.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "storybook": "start-storybook -p 6007 --quiet -s ./www",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static",
    "build-storybook": "build-storybook",
    "prep-storybook": "npm run build && npm run build-storybook && npx cpy ./dist ./storybook-static"
  },
  "dependencies": {
    "@a11y/focus-trap": "^1.0.5",
    "@esri/arcgis-html-sanitizer": "^3.0.1",
    "@stencil/core": "2.20.0",
    "@stencil/react-output-target": "^0.5.0",
    "@stencil/store": "^2.0.3",
    "esri-loader": "^3.7.0",
    "maquette": "^3.5.3"
  },
  "devDependencies": {
    "@babel/core": "7.16.5",
    "@esri/calcite-components": "^1.4.2",
    "@stencil/sass": "^2.0.1",
    "@storybook/addon-a11y": "^6.4.9",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-controls": "^6.4.9",
    "@storybook/addon-docs": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/web-components": "^6.4.9",
    "@types/arcgis-js-api": "^4.26.0",
    "@types/jest": "^26.0.24",
    "@types/sortablejs": "^1.10.7",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "babel-loader": "^8.2.3",
    "cpy-cli": "^4.1.0",
    "gh-pages": "^4.0.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "lit-html": "^2.0.2",
    "puppeteer": "^10.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "sortablejs": "^1.14.0",
    "storybook-addon-themes": "^6.1.0",
    "storybook-color-picker": "^2.2.1",
    "storybook-rtl-addon": "^0.3.3"
  }
