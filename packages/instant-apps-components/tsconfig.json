{
  "compilerOptions": {
    "target": "es2017",
    "isolatedModules": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "importHelpers": true,
    "lib": ["DOM", "DOM.Iterable", "ScriptHost", "ES2020", "ES2021"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "files": ["node_modules/@esri/calcite-components/dist/types/components.d.ts", "node_modules/arcgis-js-api/index.d.ts"],
  "include": ["src", "src/**/*.d.ts", "dist/**/*.d.ts"],
}
